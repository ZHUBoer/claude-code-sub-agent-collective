{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/load-behavioral-system.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/load-behavioral-system.sh"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/load-behavioral-system.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/directive-enforcer.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/routing-executor.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": ".*-agent$",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/test-driven-handoff.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/collective-metrics.sh"
          }
        ]
      }
    ]
  }
}